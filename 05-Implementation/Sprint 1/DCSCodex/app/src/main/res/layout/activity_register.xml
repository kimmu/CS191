<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/colorPrimary"
     tools:context="com.example.dcscodex.RegisterActivity">

     <Button
          android:id="@+id/registerButton"
          android:layout_width="215dp"
          android:layout_height="46dp"
          android:layout_marginEnd="98dp"
          android:layout_marginStart="98dp"
          android:layout_marginTop="47dp"
          android:background="@drawable/shape_button"
          android:fontFamily="sans-serif-condensed"
          android:onClick="OnRegister"
          android:text="@string/register"
          android:textColor="#ffffff"
          android:textSize="15sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEditText" />

     <EditText
          android:id="@+id/confirmPasswordEditText"
          android:layout_width="217dp"
          android:layout_height="38dp"
          android:layout_marginEnd="97dp"
          android:layout_marginStart="97dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/shape_edittext"
          android:ems="10"
          android:fontFamily="@font/simplifica"
          android:hint="@string/confirmPassword"
          android:inputType="textPassword"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

     <EditText
          android:id="@+id/passwordEditText"
          android:layout_width="217dp"
          android:layout_height="38dp"
          android:layout_marginEnd="97dp"
          android:layout_marginStart="97dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/shape_edittext"
          android:ems="10"
          android:fontFamily="@font/simplifica"
          android:hint="@string/password"
          android:inputType="textPassword"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/surnameEditText" />

     <EditText
          android:id="@+id/surnameEditText"
          android:layout_width="217dp"
          android:layout_height="38dp"
          android:layout_marginEnd="97dp"
          android:layout_marginStart="97dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/shape_edittext"
          android:ems="10"
          android:fontFamily="@font/simplifica"
          android:hint="@string/surname"
          android:inputType="textPhonetic"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/studNumEditText" />

     <EditText
          android:id="@+id/studNumEditText"
          android:layout_width="217dp"
          android:layout_height="38dp"
          android:layout_marginEnd="97dp"
          android:layout_marginStart="97dp"
          android:layout_marginTop="108dp"
          android:background="@drawable/shape_edittext"
          android:ems="10"
          android:fontFamily="@font/simplifica"
          android:hint="@string/studNum"
          android:inputType="number"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
